{% extends 'main.twig' %}

{% block title %}Password Reset - MoriTiza PHP Micro Framework{% endblock %}

{% block customStyles %}
	<!-- Custom styles -->
	<link rel="stylesheet" href="{{ asset('css/password-reset.css') }}">
{% endblock %}

{% block body %}
	<div class="container">
		<form class="form-password-reset" accept-charset="UTF-8" role="form" action="forgot" method="post">
			<h2 class="form-password-reset-heading">Password Reset</h2>
			<label for="email" class="sr-only">Email Address</label>
	        <input type="email" name="email" id="email" class="form-control" placeholder="Email Address" required autofocus>
        	<button class="btn btn-lg btn-success btn-block" type="submit">Send verification email</button>
		</form>
	</div>
{% endblock %}